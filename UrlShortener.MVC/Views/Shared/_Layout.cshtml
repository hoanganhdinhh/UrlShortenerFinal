<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrlShortener.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UrlShortener.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="elevated-bar">
        <nav class="container d-flex align-items-center justify-content-between py-3">
            <!-- Logo + Brand -->
            <a class="d-flex align-items-center text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="logo-pill d-inline-flex align-items-center justify-content-center me-2">
                    <!-- Chain icon -->
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                        <path d="M10.5 13.5l-2 2a3 3 0 104.24 4.24l2-2M13.5 10.5l2-2a3 3 0 10-4.24-4.24l-2 2"
                              stroke="url(#g1)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
                        <defs>
                            <linearGradient id="g1" x1="0" y1="0" x2="24" y2="24" gradientUnits="userSpaceOnUse">
                                <stop stop-color="#2F6BFF" /><stop offset="1" stop-color="#8A2EFF" />
                            </linearGradient>
                        </defs>
                    </svg>
                </span>
                <span class="brand-gradient fw-semibold fs-4">ShortURL</span>
            </a>

            <!-- Actions -->
            <div class="d-flex align-items-center gap-3">
                <a class="link-dark fw-semibold small d-none d-sm-inline" asp-area="" asp-controller="Authentication" asp-action="Login">
                    Log In
                </a>
                <a class="btn btn-gradient px-3 py-2 rounded-4 fw-semibold"
                   asp-area="" asp-controller="Authentication" asp-action="Register">
                    Sign Up
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade custom-modal" id="divModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content shadow-sm">
                <div class="modal-header border-0">
                    <div class="d-flex align-items-center">
                        <h5 class="modal-title mb-0" id="modalLabel">Tiêu đề Modal</h5>
                    </div>
                    <button type="button" class="btn-close btn-close-lg" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div id="divModalBody" class="modal-body">
                    <div>Nội dung chính của Modal</div>
                </div>

                @* <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                </div> *@
            </div>
        </div>
    </div>

    <button id="buttonModal" type="button" hidden class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#divModal">
        Open Modal
    </button>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UrlShortener.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function openModal(title, bodyHTML) {
            let modalLabel = document.getElementById("modalLabel");
            if(modalLabel) {
                modalLabel.innerText = title;
            }

            let divModalBody = document.getElementById("divModalBody");
            if(divModalBody) {
                divModalBody.innerHTML = bodyHTML;
            }

            let buttonModal = document.getElementById("buttonModal");
            if(buttonModal) {
                buttonModal.click();
            }
        }
        function closeModal() {
            // Use Bootstrap's API for a reliable close
            const modalEl = document.getElementById('divModal');
            if (modalEl) {
                const modalInstance = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                modalInstance.hide();
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
