<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrlShortener.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UrlShortener.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UrlShortener.MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade custom-modal" id="divModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg modal-dialog-scrollable">
            <div class="modal-content shadow-sm">
                <div class="modal-header border-0">
                    <div class="d-flex align-items-center">
                        <svg class="me-2" width="28" height="28" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <path d="M12 2L12 22" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M2 12L22 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <h5 class="modal-title mb-0" id="modalLabel">Tiêu đề Modal</h5>
                    </div>
                    <button type="button" class="btn-close btn-close-lg" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div id="divModalBody" class="modal-body">
                    <div>Nội dung chính của Modal</div>
                </div>

                @* <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                </div> *@
            </div>
        </div>
    </div>

    <button id="buttonModal" type="button" hidden class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#divModal">
        Open Modal
    </button>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UrlShortener.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function openModal(title, bodyHTML) {
            let modalLabel = document.getElementById("modalLabel");
            if(modalLabel) {
                modalLabel.innerText = title;
            }

            let divModalBody = document.getElementById("divModalBody");
            if(divModalBody) {
                divModalBody.innerHTML = bodyHTML;
            }

            let buttonModal = document.getElementById("buttonModal");
            if(buttonModal) {
                buttonModal.click();
            }
        }
        function closeModal() {
            // Use Bootstrap's API for a reliable close
            const modalEl = document.getElementById('divModal');
            if (modalEl) {
                const modalInstance = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                modalInstance.hide();
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
