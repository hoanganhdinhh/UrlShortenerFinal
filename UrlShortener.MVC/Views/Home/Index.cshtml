@{
    ViewData["Title"] = "Home";
}

<section class="hero-wrap">
    <div class="container py-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold lh-tight hero-title">
                    Shorten Your URLs in <span class="text-gradient">Seconds</span>
                </h1>

                <p class="lead text-secondary mt-4">
                    Create clean, memorable short links that are perfect for sharing on
                    social media, emails, and anywhere else. Track clicks and manage all
                    your links in one place.
                </p>

                <div class="mt-4">
                    <div class="input-group input-group-lg hero-input">
                        <input type="url" class="form-control form-control-lg"
                               placeholder="Enter your long URL here..." aria-label="Long URL">
                        <!-- NÚT SHORTEN: điều hướng tới trang đăng nhập -->
                        <!-- Nếu bạn dùng Identity (mặc định ASP.NET Core) -->
                        <a class="btn btn-primary btn-lg px-4"
                           asp-area="Identity" asp-page="/Account/Login">Shorten</a>
                        <!-- Hoặc nếu bạn dùng AccountController -->
                        @* <a class="btn btn-primary btn-lg px-4" asp-controller="Account" asp-action="Login">Shorten</a> *@
                    </div>

                    <a class="btn btn-cta mt-4" asp-area="Identity" asp-page="/Account/Register">Get Started Free</a>
                    @* Hoặc: <a class="btn btn-cta mt-4" asp-controller="Account" asp-action="Register">Get Started Free</a> *@
                </div>
            </div>

            <div class="col-lg-6">
                <div class="hero-image shadow-lg rounded-4">
                    <img src="~/img/hero-earth.jpg" class="img-fluid rounded-4" alt="Earth from space">
                </div>
            </div>
        </div>
    </div>
</section>

