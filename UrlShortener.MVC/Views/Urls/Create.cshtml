    document.addEventListener('click', function (e) {
        if (!e.target) return;
        if (e.target.id === 'btnSaveEdit') {
            e.preventDefault();
            var $form = $('#divModalBody').find('form').first();
            if (!$form || $form.length === 0) {
                console.error('Edit form not found in modal');
                return;
            }

            $.ajax({
                url: $form.attr('action') || '/Urls/Edit',
                type: 'POST',
                data: $form.serialize(), // includes Id and __RequestVerificationToken
                beforeSend: function() {
                    console.log("Saving edit...");
                },
                success: function (response) {
                    // If server returned JSON { isOK: true } -> success
                    if (response && typeof response === 'object' && response.isOK) {
                        reloadUrlList();
                        closeModal();
                        return;
                    }

                    // Otherwise treat response as HTML partial (validation errors or re-rendered form)
                    $('#divModalBody').html(response);
                },
                error: function(xhr, status, error) {
                    console.error("Edit POST error:", error);
                    console.log(xhr.responseText);
                }
            });
        }
    });

