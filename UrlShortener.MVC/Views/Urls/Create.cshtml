@model UrlShortener.MVC.Models.UrlVM

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Shorten URL</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="OriginalUrl" class="form-label"></label>
                            <input asp-for="OriginalUrl" class="form-control" placeholder="Enter original URL" />
                            <span asp-validation-for="OriginalUrl" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ShortCode" class="form-label"></label>
                            <input asp-for="ShortCode" class="form-control" placeholder="Custom short code (optional)" />
                            <span asp-validation-for="ShortCode" class="text-danger small"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-link-45deg"></i> Shorten
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mb-3">
    <h4>Url List</h4>
    <div id="divUrlList">
        @await Component.InvokeAsync("UrlList")
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function openModalDeleteUrl(idUrl) {
        $.ajax({
            url: "/Urls/Delete",
            type: "GET",
            data:{
                id: idUrl,
            },
            beforeSend: function(){
                console.log("Loading...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                openModal("", response);
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }

    function deleteUrl(idUrl) {
        let inputToken = document.querySelector('input[name="__RequestVerificationToken"]');
        let token = inputToken?.value;
        $.ajax({
            url: "/Urls/Delete",
            type: "POST",
            data:{
                id: idUrl,
                __RequestVerificationToken: token
            },
            beforeSend: function(){
                console.log("Deleting...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                if(response.isOK) {
                    reloadUrlList();
                    closeModal();
                }
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }

    function reloadUrlList() {
        $.ajax({
            url: "/Urls/Reload",
            type: "GET",
            beforeSend: function(){
                console.log("Reloading Url List...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                let divUrlList = document.getElementById("divUrlList");
                if(divUrlList) {
                    divUrlList.innerHTML = response;
                    initUrlListSearch();
                }
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }

    function openModalEditUrl(idUrl) {
        $.ajax({
            url: "/Urls/Edit",
            type: "GET",
            data:{
                id: idUrl,
            },
            beforeSend: function(){
                console.log("Loading...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                openModal("", response);
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }


    document.addEventListener('click', function (e) {
        if (!e.target) return;
        if (e.target.id === 'btnSaveEdit') {
            e.preventDefault();
            var $form = $('#divModalBody').find('form').first();
            if (!$form || $form.length === 0) {
                console.error('Edit form not found in modal');
                return;
            }

            $.ajax({
                url: $form.attr('action') || '/Urls/Edit',
                type: 'POST',
                data: $form.serialize(), // includes Id and __RequestVerificationToken
                beforeSend: function() {
                    console.log("Saving edit...");
                },
                success: function (response) {
                    // If server returned JSON { isOK: true } -> success
                    if (response && typeof response === 'object' && response.isOK) {
                        reloadUrlList();
                        closeModal();
                        return;
                    }

                    // Otherwise treat response as HTML partial (validation errors or re-rendered form)
                    $('#divModalBody').html(response);
                },
                error: function(xhr, status, error) {
                    console.error("Edit POST error:", error);
                    console.log(xhr.responseText);
                }
            });
        }
    });


        function openModalDetails(idUrl) {
        $.ajax({
            url: "/Urls/Details",
            type: "GET",
            data:{
                id: idUrl,
            },
            beforeSend: function(){
                console.log("Loading...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                openModal("", response);
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }

    function handleUrlSearchInput(e) {
        const input = e.currentTarget;
        window._urlSearchTimeout = window._urlSearchTimeout || null;
        clearTimeout(window._urlSearchTimeout);
        window._urlSearchTimeout = setTimeout(() => {
            const q = input.value.trim().toLowerCase();
            const rows = document.querySelectorAll('table.table tbody tr');
            if (!q) {
                rows.forEach(r => r.style.display = '');
                return;
            }

            rows.forEach(r => {
                const shortTd = r.querySelector('td:nth-child(1)');
                const origTd = r.querySelector('td:nth-child(2)');
                const shortText = shortTd ? shortTd.textContent.trim().toLowerCase() : '';
                const origText = origTd ? origTd.textContent.trim().toLowerCase() : '';
                const match = shortText.indexOf(q) !== -1 || origText.indexOf(q) !== -1;
                r.style.display = match ? '' : 'none';
            });
        }, 200);
    }

    function initUrlListSearch() {
        const input = document.getElementById('urlSearch');
        if (!input) return;
        // remove previous to avoid duplicate handlers
        input.removeEventListener('input', handleUrlSearchInput);
        input.addEventListener('input', handleUrlSearchInput);
    }

    // Call initializer once on initial page script execution
    initUrlListSearch();

</script>
