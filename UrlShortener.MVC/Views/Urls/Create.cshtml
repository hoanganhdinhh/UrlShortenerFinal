@model UrlShortener.MVC.Models.UrlVM

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Shorten URL</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="OriginalUrl" class="form-label"></label>
                            <input asp-for="OriginalUrl" class="form-control" placeholder="Enter original URL" />
                            <span asp-validation-for="OriginalUrl" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ShortCode" class="form-label"></label>
                            <input asp-for="ShortCode" class="form-control" placeholder="Custom short code (optional)" />
                            <span asp-validation-for="ShortCode" class="text-danger small"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-link-45deg"></i> Shorten
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mb-3">
    <h4>Url List</h4>
    <div id="divUrlList">
        @await Component.InvokeAsync("UrlList")
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function openModalDeleteUrl(idUrl) {
        $.ajax({
            url: "/Urls/Delete",
            type: "GET",
            data:{
                id: idUrl,
            },
            beforeSend: function(){
                console.log("Loading...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                openModal("", response);
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }

    function deleteUrl(idUrl) {
        let inputToken = document.querySelector('input[name="__RequestVerificationToken"]');
        let token = inputToken?.value;
        $.ajax({
            url: "/Urls/Delete",
            type: "POST",
            data:{
                id: idUrl,
                __RequestVerificationToken: token
            },
            beforeSend: function(){
                console.log("Deleting...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                if(response.isOK) {
                    reloadUrlList();
                    closeModal();
                }
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }

    function reloadUrlList() {
        $.ajax({
            url: "/Urls/Reload",
            type: "GET",
            beforeSend: function(){
                console.log("Reloading Url List...");
            },
            success: function (response){
                console.log("Kết quả:", response);
                let divUrlList = document.getElementById("divUrlList");
                if(divUrlList) {
                    divUrlList.innerHTML = response;
                }
            },
            error: function(xhr, status, error) {
                console.error("Lỗi:", error);
                console.log("Chi tiết:", xhr.responseText);
            },
            complete: function() {
                console.log("Hoàn tất AJAX request");
            },
            timeout: 5000

        });
    }

