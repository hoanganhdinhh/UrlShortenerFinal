@model UrlShortener.MVC.Models.Identities.RegisterConfirmationVM
@{
    ViewData["Title"] = "RegisterConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Confirm your account.</h1>

@if (Model != null)
{
    <div class="container py-4">
        <p class="text-muted">We have sent a confirmation email to <strong>@Model.Email</strong>.</p>
        <div class="alert alert-info">
            Please check your inbox and click the link to activate your account.
            <br />
            Tip: If you don't see it in your Inbox, please also check the <b>Spam/Junk</b> folder.
        </div>
        <form asp-action="RegisterConfirmation" method="post">
            <input asp-for="ReturnUrl" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <input asp-for="Code" type="hidden" />
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>


        <div>Or Click Confirm to confirm your account</div>
        <button type="submit" class=" btn btn-primary">Confirm</button>
        </form>
        <br />
        <a class="btn btn-primary" asp-page="/Account/Login">Back to Login</a>
