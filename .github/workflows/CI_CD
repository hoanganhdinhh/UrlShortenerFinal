name: CI/CD - UrlShortener.MVC

on:
  push:
    branches: [ "main" ]
    tags:
      - "v1.0.0"        # đẩy tag version nếu bạn tạo tag dạng v1.2.3
  pull_request:
    branches: [ "main" ]

permissions:
  contents: read

env:
  PROJECT_SLN: UrlShortener.sln
  DOCKERFILE_PATH: UrlShortener.MVC/Dockerfile
  IMAGE_NAME: hoanganhdinh/urlshortenermvc

jobs:
  build-test-and-docker:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      # .NET 8 để khớp với Dockerfile (aspnet:8.0, sdk:8.0)
      - name: Setup .NET
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: 8.0.x

      - name: Restore
        run: dotnet restore ${{ env.PROJECT_SLN }}

      - name: Build
        run: dotnet build --configuration Release --no-restore ${{ env.PROJECT_SLN }}

      - name: Test
        run: dotnet test --no-build --verbosity normal ${{ env.PROJECT_SLN }}

      - name: Log in to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Docker meta
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.IMAGE_NAME }}
          tags: |
            type=raw,value=latest,enable={{is_default_branch}}
            type=semver,pattern={{version}}
            type=semver,pattern={{major}}.{{minor}}
            type=sha,prefix=sha-

      - name: Build and Push (multi-arch)
        uses: docker/build-push-action@v6
        with:
          context: .
          file: ${{ env.DOCKERFILE_PATH }}
          push: ${{ github.event_name != 'pull_request' }}
          platforms: linux/amd64,linux/arm64
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          build-args: |
            BUILD_CONFIGURATION=Release
          cache-from: type=registry,ref=${{ env.IMAGE_NAME }}:buildcache
          cache-to: type=registry,ref=${{ env.IMAGE_NAME }}:buildcache,mode=max
